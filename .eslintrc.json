{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2022": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "*.test.js",
        "**/template/scripts/**"
    ],
    "rules": {
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "object-curly-newline": ["error", { "minProperties": 2 }],
        "object-shorthand": ["warn", "never"],
        "max-len": ["warn", { "code": 120 }]
    }
}
